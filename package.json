{
  "name": "microservices",
  "version": "0.1.0",
  "description": "Orders processing by micro services",
  "license": "MIT",
  "author": "bmi",
  "repository": {
    "type": "git",
    "url": "https://github.com/appshore/OrdersToParcelsMicroservices"
  },
  "scripts": {
    "dev": "moleculer-runner --repl --hot services",
    "start": "moleculer-runner",
